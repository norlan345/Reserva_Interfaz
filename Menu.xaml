<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reserva_Interfaz.Menu"
             Title="Menú">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Bienvenido al Menú" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />

        <Button Text="Corte" 
                BackgroundColor="#333333" 
                TextColor="White" 
                Clicked="OnCorteButtonClicked" />

        <Button Text="Perfil" 
                BackgroundColor="#333333" 
                TextColor="White" 
                Clicked="OnPerfilButtonClicked" />

        <Button Text="Reservación" 
                BackgroundColor="#333333" 
                TextColor="White" 
                Clicked="OnReservacionButtonClicked" />

        <Button Text="Messenger Barber" 
                BackgroundColor="#333333" 
                TextColor="White" 
                Clicked="OnMessengerBarberButtonClicked" />
    </StackLayout>
</ContentPage>
